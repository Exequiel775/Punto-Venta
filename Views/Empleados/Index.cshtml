@model IEnumerable<Servicios.Interface.Persona.EmpleadoDto>

@{
    ViewData["Title"] = "Empleados";
}

<div class="bg-white">
    <div class="botones row">
        <div class="col">
            <button type="button" class="btn btn-primary" title="Nuevo Empleado" id="botonNuevo">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="22" fill="currentColor"
                    class="bi bi-person-plus" viewBox="0 0 16 16">
                    <path
                        d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                    <path fill-rule="evenodd"
                        d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                </svg>
            </button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-success" title="Crear Usuario" id="btnCrearUsuario">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="22" fill="currentColor"
                    class="bi bi-person-check-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                    <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg>
            </button>
        </div>
    </div>
    <div class="table-responsive contenedor-tabla">
        <table class="table table-striped table-sm" id="tabla-empleados">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Dirección</th>
                    <th>Usuario</th>
                    <th>Select</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Dni</td>
                        <td>@item.Direccion</td>
                        <td>@item.Usuario</td>
                        <td>
                            @if (item.Usuario == "NO CREADO")
                            {
                               <input type="checkbox" class="chkInput">
                            }
                        </td>
                        <td>                          
                            <button type="button" class="btn btn-danger btnModificar" value="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="18" fill="currentColor"
                                    class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="contador">
    <h5>Total de empleados registrados: <strong>@Model.Count()</strong></h5>
</div>

<style type="text/css">
    body {
        background-color: rgb(222, 222, 222);
    }

    .contenedor-tabla {
        padding: 30px;
    }

    .campo-requerido {
        border: 1px solid darkred;
    }

    .contador {
        background-color: black;
        color: white;
        padding: 20px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    #botonNuevo {
        border: none;
        outline: none;
    }

    .botones {
        padding: 30px;
    }

    #btnModificar {
        border: none;
        outline: none;
    }

    #btnCrearUsuario{
        border:none;
        outline:none;
    }
</style>
<script type="text/javascript" src="~/js/Empleados/EmpleadoIndex.js"></script>