    }

    .titulo {
        background-color: black;
        color: white;
        text-decoration: none;
        font-size: 22px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding-top: 10px;
        padding-bottom: 10px;
    }

    #tabla-usuarios {
        font-family: 'Times New Roman', Times, serif;
    }

    .botones {
        margin-top: 5px;
        margin-bottom: 5px;
