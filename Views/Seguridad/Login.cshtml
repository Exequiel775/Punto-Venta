@model Servicios.Interface.Usuario.Usuario

@{
    ViewData["Title"] = "L O G I N";
    Layout = null;

    <head>
        <meta charset="UTF-8">
    </head>
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="border contenedor">
    <div class="m-3">
        @using (Html.BeginForm("Login", "Seguridad", FormMethod.Post))
        {
            <div class="form-group">
                <label style="color:red">@Html.ValidationMessage("inexistente")</label>
                <h5>Usuario</h5>
                <h5 style="color:red">@Html.ValidationMessageFor(x => x.Nombre)</h5>
                @Html.TextBoxFor(x => x.Nombre, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <h5>Contrase√±a</h5>
                <h5 style="color:red">@Html.ValidationMessageFor(x => x.Password)</h5>
                @Html.TextBoxFor(x => x.Password, htmlAttributes: new { @class = "form-control", @type="password" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="INGRESAR">
            </div>
        }
    </div>
</div>

<style type="text/css">
.contenedor{
    width: 60%;
    margin-left: 50%;
    transform: translateX(-50%);
}
</style>